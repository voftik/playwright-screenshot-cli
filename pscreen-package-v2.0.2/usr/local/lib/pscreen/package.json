{
  "name": "playwright-screenshot-cli",
  "version": "2.0.2",
  "description": "Professional CLI tool for creating screenshots using Playwright with a modern web interface",
  "main": "index.js",
  "scripts": {
    "start": "node index.js serve",
    "dev": "node index.js serve --port 3000",
    "screenshot": "node index.js take",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "bin": {
    "playwright-screenshot": "./index.js"
  },
  "keywords": [
    "playwright",
    "screenshot",
    "cli",
    "web-scraping",
    "automation",
    "testing",
    "web-interface",
    "screenshots",
    "browser-automation"
  ],
  "author": "Playwright Screenshot CLI Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "helmet": "^7.2.0",
    "playwright": "^1.47.2",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^9.9.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/voftik/playwright-screenshot-cli.git"
  },
  "bugs": {
    "url": "https://github.com/voftik/playwright-screenshot-cli/issues"
  },
  "homepage": "https://github.com/voftik/playwright-screenshot-cli#readme",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  }
}
